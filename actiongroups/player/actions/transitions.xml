<transitions x_include="../defaultTransitions.xml">
    <transition>
        <transitionTo>slowidleblend</transitionTo>
        <conditions>
            <isTrue>requiresSlowIdleBlend</isTrue>
            <isFalse>IsPerformingAnAction</isFalse>
