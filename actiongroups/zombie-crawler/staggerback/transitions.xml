<transitions>

    <transition>
        <transitionTo>idle</transitionTo>
        <conditions>
            <compare a="stateEventDelayTimer" op="&lt;=" b="0.0"/>
        </conditions>
    </transition>

    <transition>
        <transitionTo>hitreaction</transitionTo>
        <conditions>
            <isTrue>hashitreaction</isTrue>
        </conditions>
    </transition>

    <transition>
        <transitionTo>onground</transitionTo>
        <conditions>
            <isTrue>bDead</isTrue>
        </conditions>
    </transition>

</transitions>

